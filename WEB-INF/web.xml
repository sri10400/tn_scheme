<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         id="WebApp_ID" version="6.0">

  <display-name>TN_Schemes_Web</display-name>

  <!-- Register your CategoryLoaderServlet -->
  <servlet>
    <servlet-name>CategoryLoaderServlet</servlet-name>
    <servlet-class>org.scheme.CategoryLoaderServlet</servlet-class>
  </servlet>

  <!-- Map it to a URL -->
  <servlet-mapping>
    <servlet-name>CategoryLoaderServlet</servlet-name>
    <url-pattern>/CategoryLoaderServlet</url-pattern>
  </servlet-mapping>

  <!-- Set it as welcome -->
  <welcome-file-list>
    <welcome-file>CategoryLoaderServlet</welcome-file>
  </welcome-file-list>

</web-app>
